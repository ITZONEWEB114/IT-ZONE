<div id="content_product_rt">
	<div id = "actions">
		<div class = "buybuttonswidget yellow">
			<div class ="oreilly_buy_buttons">
				<div class="header">
					<span class="test-strong">Recommend</span>
				</div>
				<div class="book_set">
