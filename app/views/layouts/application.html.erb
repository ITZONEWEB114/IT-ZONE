		<div id="columns">
			<div id="side">
				<%= link_to "Home","/" %><br />
				<%= link_to "Questions","/" %><br />
				<%= link_to "News","/" %><br />
				<%= link_to "Contact","mailto:aa966@126.com" %><br />
			</div>
			<div id="main">
				<%= yield %><!-- <label id="code.depot.e.include"/> -->
			</div>
		</div>

	</body>
</html>
