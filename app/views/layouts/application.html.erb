<!DOCTYPE html>
<html>
	<head>
	  <title>Pragprog Books Online Store</title>
	  <!-- START:stylesheet -->
	  <%= stylesheet_link_tag "scaffold" %>
	  <%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id="code.slt"/> -->
	  <!-- END:stylesheet -->
	  <%= javascript_include_tag :defaults %>
	  <%= csrf_meta_tag %><!-- <label id="code.scrf"/> -->
	</head>

	<body id="store">
		<div id="banner">
			<div id="operatebar"><%= link_to "Lo333333333332999999999gin", "/" %></div>
			<div id="pagetitle">
				<%= link_to image_tag("logo.png"),"/" %><%= @page_title || "Pragmatic Bookshelf" %>
			</div><!-- <label id="code.depot.e.title"/> -->
			<div id="searchbar"><input id="searchkey" type="text" name="searchkey" /><input id="btn-search" type="submit" name="searchsubmit" value="Search" /></div>
			
			<div class="clearfloat"></div>

		</div>
		
		<div id="columns">
			<div id="side">
				<% if @cart %>
					<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
						<%= render @cart %>
					<% end %>
				<% end %>
				<div id="booksort">
					<ul>
						<li class="hotsort"><%= link_to "知音(HOT!!)", "#" %></li>
						<li class="hotsort"><%= link_to "故事会(HOT!!)", "#" %></li>
						
						<% Product::CATEGORIES.each do |category| %>
							<li><%= link_to category, store_path(:category => category) %></li>
						<% end %>
					</ul>
				</div>
			</div>
			<div id="main">
				<%= yield %><!-- <label id="code.depot.e.include"/> -->
			</div>
			<div class="clearfloat"></div>
		</div>
			 
		<div id="footer">
			<div id="links">
				<%= link_to "Home","/" %>|
				<%= link_to "Questions","/" %>|
				<%= link_to "News","/" %>|
				<%= link_to "Contact","mailto:aa966@126.com" %>|
				<%= link_to "About us","https://github.com/ITZONEWEB114/IT-ZONE" %>|
			</div>
			<div id="copyright">
				<span>Copyright&copy;2011-2011 <%= link_to "ITZONE", "https://github.com/ITZONEWEB114/IT-ZONE" %></span>
			</div>
		</div>
		
		
		<!-- ShareTo Button BEGIN -->
		<!-- %= javascript_include_tag "http://s.shareto.com.cn/js/shareto_float.js#color=1&align=right&move=0" % -->
		<!-- <%= javascript_include_tag "shareto_float.js#color=1&align=right&move=0" %> -->
		<!-- ShareTo Button END -->
	</body>
</html>
