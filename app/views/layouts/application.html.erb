<!DOCTYPE html>
<html>
	<head>
	  <title>Pragprog Books Online Store</title>
	  <!-- START:stylesheet -->
	  <%= stylesheet_link_tag "scaffold" %>
	  <%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id="code.slt"/> -->
	  <!-- END:stylesheet -->
	  <%= javascript_include_tag :defaults %>
	  <%= csrf_meta_tag %><!-- <label id="code.scrf"/> -->
	</head>

	<body id="store">
		<div id="banner">
			<div id="operatebar">
				<% if session[:user_id] %>
					<span class="operation"><%= link_to t('.orders'), orders_path %></span>
					|
					<span class="operation"><%= link_to t('.products'), products_path %></span>
					|
					<span class="operation"><%= link_to t('.users'), users_path %></span>
					|
					<span class="operation"><%= link_to t('.logout'), logout_path, :method => :delete %></span>
				<% else %>
					<span class="operation"><%= t('.please') %> <%= link_to t('.login'), login_path %></span>
				<% end %>
			</div>
			<div class="clearfloat"></div>
			<div id="pagetitle">
				<%= link_to image_tag("logo.png"),store_path %>
				<%= @page_title || t('.title') %>
				<%= form_tag store_path, :class => 'locale' do %>
					<%= select_tag 'set_locale',
						options_for_select(LANGUAGES, I18n.locale.to_s),
						:onchange => 'this.form.submit()' %>
					<%= submit_tag 'submit' %>
					<%= javascript_tag "$$('.locale input').each(Element.hide)" %>
				<% end %>
			</div><!-- <label id="code.depot.e.title"/> -->
			<div id="searchbar"><%= form_tag store_path do %><%= text_field_tag 'searchkey', nil, :id => 'searchkey' %><%= submit_tag t('.search'), :id => 'btn-search', :name => 'searchsubmit' %><% end %></div>
			
			<div class="clearfloat"></div>

		</div>
		
		<div id="columns">
			<div id="side">
				<% if @cart %>
					<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
						<%= render @cart %>
					<% end %>
				<% end %>
				<div id="booksort">
					<ul>
						<li class="hotsort"><%= link_to "知音(HOT!!)", "#" %></li>
						<li class="hotsort"><%= link_to "故事会(HOT!!)", "#" %></li>
						
						<% Product::CATEGORIES.each do |category| %>
							<% if session[:user_id] %>
								<li><%= link_to t("categories.#{category}"), products_path(:category => category) %></li>
							<% else %>
								<li><%= link_to t("categories.#{category}"), store_path(:category => category) %></li>
							<% end %>
						<% end %>
					</ul>
				</div>
			</div>
			<div id="main">
				<%= yield %><!-- <label id="code.depot.e.include"/> -->
			</div>
			<div class="clearfloat"></div>
		</div>
			 
		<div id="footer">
			<div id="links">
				<%= link_to t(".home"),"/" %>|
				<%= link_to t(".questions"),"/" %>|
				<%= link_to t(".news"),"/" %>|
				<%= link_to t(".contact"),"mailto:aa966@126.com" %>|
				<%= link_to t(".about us"),"https://github.com/ITZONEWEB114/IT-ZONE" %>|
			</div>
			<div id="copyright">
				<span><%= t(".copyright") %>&copy;2011-2011 <%= link_to t(".itzone"), "https://github.com/ITZONEWEB114/IT-ZONE" %></span>
			</div>
		</div>
		
		
		<!-- ShareTo Button BEGIN -->
		<!-- %= javascript_include_tag "http://s.shareto.com.cn/js/shareto_float.js#color=1&align=right&move=0" % -->
		<!-- <%= javascript_include_tag "shareto_float.js#color=1&align=right&move=0" %> -->
		<!-- ShareTo Button END -->
	</body>
</html>
