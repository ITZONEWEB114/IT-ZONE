<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Listing orders</h1>

<table>
  <tr>
	<th>Order#:</th>
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type</th>
	<th>Shipped</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.id %></td>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
	<td><%= order.shipped ? 'Yes' : 'No' %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Ship Orders', ship_orders_path %>
<p><%= will_paginate @orders %></p>